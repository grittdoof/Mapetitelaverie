# Configuration Ma Petite Laverie
# Copier ce fichier en .env et remplir avec vos vraies valeurs

# Configuration SMTP pour l'envoi d'emails
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM_EMAIL=noreply@mapetitelaverie.fr
SMTP_FROM_NAME="Ma petite laverie"

# Configuration Pushover pour les notifications
PUSHOVER_TOKEN=your_pushover_token
PUSHOVER_USER=your_pushover_user_key

# Configuration email destinataire (séparés par des virgules)
EMAIL_TO=email1@example.com,email2@example.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_SUBMISSIONS=3
RATE_LIMIT_TIME_WINDOW=3600

# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX

# Google Ads Conversion
GOOGLE_ADS_CONVERSION_ID=AW-XXXXXXXXX
GOOGLE_ADS_CONVERSION_LABEL=XXXXXX

# Contact
CONTACT_PHONE=0240316600
CONTACT_EMAIL=contact@mapetitelaverie.fr

# Form Submission
FORM_SUBMIT_URL=submit-form.php
